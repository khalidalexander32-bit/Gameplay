        function getTranslation(key) {
            const lang = document.getElementById('language-select').value;
            return translations[lang][key] || translations['en'][key];
        }

        function updateLanguage() {
            const lang = document.getElementById('language-select').value;
            
            document.getElementById('hero-title').textContent = translations[lang].heroTitle;
            document.getElementById('hero-subtitle').textContent = translations[lang].heroSubtitle;
            document.getElementById('featured-title').textContent = translations[lang].featuredTitle;
            document.getElementById('all-games-title').textContent = translations[lang].allGamesTitle;
            document.getElementById('footer-text').textContent = translations[lang].footerText;
            document.getElementById('privacy-link').textContent = translations[lang].privacy;
            document.getElementById('terms-link').textContent = translations[lang].terms;
            document.getElementById('contact-link').textContent = translations[lang].contact;
            
            // Update download buttons
            document.querySelectorAll('.download-btn').forEach((btn, index) => {
                const span = btn.querySelector('span');
                if (span && !btn.classList.contains('downloading') && !btn.classList.contains('downloaded')) {
                    span.textContent = translations[lang].downloadNow;
                }
            });
        }

        // Language switcher
        const languageSelect = document.getElementById('language-select');
        languageSelect.addEventListener('change', updateLanguage);

        // Smooth scrolling for navigation links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add scroll effect to header
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.background = 'var(--header-bg)';
                header.style.backdropFilter = 'blur(20px)';
            } else {
                header.style.background = 'var(--header-bg)';
            }
        });

        // Initialize language on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateLanguage();
        });
    </script>
</body>
</html>
